{
  "name": "smart-playwright-agent-protocol",
  "version": "1.0.0",
  "description": "A strict Agentic Protocol and Memory System for Playwright. Uses MCP (Model Context Protocol) and a structured .ai/ filesystem to enforce architectural standards, self-healing, and institutional memory.",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "mcp:start": "npx -y @executeautomation/playwright-mcp-server"
  },
  "keywords": [
    "playwright",
    "mcp-server",
    "agentic-workflow",
    "self-healing",
    "qa-automation",
    "sdet-agent",
    "model-context-protocol"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "eslint": "^9.39.2",
    "eslint-plugin-playwright": "^2.4.1",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  }
}